generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum Role {
  MANAGER
  CUSTOMER
}

enum ProviderType {
  LOCAL
  GOOGLE
  APPLE
}

enum TimeSlot {
  SLOT_10_12 // 10:00-12:00
  SLOT_12_14 // 12:00-14:00
  SLOT_14_16 // 14:00-16:00
  SLOT_16_18 // 16:00-18:00
  SLOT_18_20 // 18:00-20:00
  SLOT_20_22 // 20:00-22:00
  SLOT_22_00 // 22:00-00:00
}

// Models
model User {
  id               String         @id @default(uuid())
  username         String         @unique
  email            String         @unique
  phone            String?
  age              Int
  role             Role           @default(CUSTOMER)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  twoFactorEnabled Boolean        @default(false)
  twoFactorSecret  String?
  authProviders    AuthProvider[]
  refreshTokens    RefreshToken[]
  tickets          Ticket[]
  watchHistory     WatchHistory[]

  @@map("users")
}

model AuthProvider {
  id           String       @id @default(uuid())
  userId       String
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider     ProviderType
  providerId   String?
  passwordHash String?
  createdAt    DateTime     @default(now())

  @@unique([provider, providerId])
  @@unique([userId, provider])
  @@map("auth_providers")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}

model Movie {
  id             String         @id @default(uuid())
  title          String
  description    String?
  ageRestriction Int            @default(0)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  sessions       Session[]
  watchHistory   WatchHistory[]

  @@map("movies")
}

model Room {
  id        String    @id @default(uuid())
  number    Int       @unique
  capacity  Int       @default(50)
  sessions  Session[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("rooms")
}

model Session {
  id        String   @id @default(uuid())
  movieId   String
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  date      DateTime @db.Date
  timeSlot  TimeSlot
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]

  @@unique([date, timeSlot, roomId])
  @@map("sessions")
}

model Ticket {
  id          String   @id @default(uuid())
  userId      String
  sessionId   String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  session     Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  purchasedAt DateTime @default(now())

  @@index([userId, sessionId])
  @@map("tickets")
}

model WatchHistory {
  id        String   @id @default(uuid())
  userId    String
  movieId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  watchedAt DateTime @default(now())

  @@map("watch_history")
}

model AuditLog {
  id         String   @id @default(uuid())
  actorId    String?
  actorRole  String?
  action     String // USER_LOGIN, MOVIE_CREATE, etc.
  entityType String? // User, Movie, Session, Ticket
  entityId   String?
  status     String // SUCCESS, FAILURE
  ipAddress  String?
  userAgent  String?
  changes    Json? // { before: {...}, after: {...} }
  metadata   Json? // extra context
  createdAt  DateTime @default(now())

  @@index([actorId])
  @@index([action])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}
